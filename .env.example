# ========================================
# AI Agent Mastery - Environment Variables
# ========================================

# ----------------------------------------
# LLM Configuration
# ----------------------------------------
LLM_PROVIDER=openai                    # openai, anthropic, groq, mistral, cohere, ollama
LLM_MODEL=gpt-4o-mini                  # Model name for your provider
LLM_API_KEY=your_api_key_here          # API key for your LLM provider
LLM_BASE_URL=                          # Optional: Custom base URL (for Ollama, etc.)
LLM_TEMPERATURE=0.7                    # 0.0 (deterministic) to 1.0 (creative)
LLM_MAX_TOKENS=4096                    # Maximum tokens to generate
LLM_TOP_P=1.0                          # Nucleus sampling
LLM_FREQUENCY_PENALTY=0.0              # Repetition penalty
LLM_PRESENCE_PENALTY=0.0               # Topic repetition penalty

# ----------------------------------------
# Embedding Configuration
# ----------------------------------------
EMBEDDING_PROVIDER=openai              # openai, cohere, voyageai
EMBEDDING_MODEL=text-embedding-3-small # Embedding model name
EMBEDDING_API_KEY=your_embedding_key   # API key for embeddings (can be same as LLM_API_KEY)
EMBEDDING_BASE_URL=https://api.openai.com/v1
EMBEDDING_DIMENSIONS=1536              # Embedding vector dimensions

# ----------------------------------------
# Database (Supabase or PostgreSQL)
# ----------------------------------------
DATABASE_URL=postgresql://user:password@localhost:5432/dbname
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_anon_key
SUPABASE_SERVICE_KEY=your_service_key

# ----------------------------------------
# Server Configuration
# ----------------------------------------
PORT=8000
NODE_ENV=development                   # development, production
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# ----------------------------------------
# RAG Pipeline Configuration
# ----------------------------------------
RAG_WATCH_DIRECTORY=./documents        # Directory to watch for new documents
CHUNK_SIZE=1000                        # Text chunk size for RAG
CHUNK_OVERLAP=200                      # Overlap between chunks
RAG_TOP_K=5                            # Number of results to retrieve
RAG_SIMILARITY_THRESHOLD=0.7           # Minimum similarity score

# ----------------------------------------
# Google Drive Integration (Optional)
# ----------------------------------------
GOOGLE_DRIVE_FOLDER_ID=
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:3000/oauth/callback

# ----------------------------------------
# Web Search Configuration
# ----------------------------------------
# Option 1: Brave Search (recommended)
BRAVE_API_KEY=your_brave_api_key

# Option 2: SearXNG (self-hosted)
SEARXNG_BASE_URL=http://localhost:8080

# ----------------------------------------
# Code Execution (Optional)
# ----------------------------------------
ENABLE_CODE_EXECUTION=false            # Enable sandboxed code execution
CODE_EXECUTION_TIMEOUT=5000            # Timeout in milliseconds

# ----------------------------------------
# Observability (Optional)
# ----------------------------------------
LANGFUSE_PUBLIC_KEY=
LANGFUSE_SECRET_KEY=
LANGFUSE_HOST=https://cloud.langfuse.com

# ----------------------------------------
# Memory Configuration
# ----------------------------------------
MEMORY_ENABLED=true                    # Enable long-term memory
MEMORY_TOP_K=3                         # Number of memories to retrieve
MEMORY_SIMILARITY_THRESHOLD=0.6        # Minimum similarity for memories

# ----------------------------------------
# Additional LLM Providers (Optional)
# ----------------------------------------
# Anthropic
ANTHROPIC_API_KEY=

# Groq
GROQ_API_KEY=

# Mistral
MISTRAL_API_KEY=

# Cohere
COHERE_API_KEY=

# Ollama (local)
OLLAMA_BASE_URL=http://localhost:11434

# ----------------------------------------
# Frontend Configuration (if using)
# ----------------------------------------
VITE_API_URL=http://localhost:8000
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your_anon_key
